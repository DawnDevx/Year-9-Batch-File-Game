echo Start Loading (Y/N)
set /p StartLoading=
if %StartLoading% == Y (
	goto StartLoading
) else (
	echo [Automatically Exiting In 3s - Press Enter to skip]
	timeout > nul /t 3
	exit
)

:StartLoading
