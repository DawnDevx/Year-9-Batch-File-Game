echo ÈÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍ¼
set /p CharGender=
if %CharGender%==Male (
	echo Your Character Gender: %CharGender%
	pause > nul
	goto SetUpBank
) else (
	if %CharGender%==Female (
		echo Your Character Gender: %CharGender%
		pause > nul
		goto SetUpBank
	) else (
		echo This is not a valid gender
		pause > nul
		goto CreateCharacterGender
	)
)

:SetUpBank
cls
echo ÉÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍ»
