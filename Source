echo Cash: %CharCash%
echo Bank Account Number: %CharBankNum%
pause > nul
echo What would you like to do?
echo Get A Job? (Use: JOB)
echo Exit? (Use: Exit)
echo --More Coming Soon--
set /p ChoicePath=
if %ChoicePath%==JOB (

) else (
	if %ChoicePath%==Exit (
		cls
		echo Press any key to exit...
		pause > nul
		exit
	) else (
		echo Not a valid path
		pause > nul
		goto MainMenu
	)
)

:GetAJob
cls
echo What would you like to work as?
pause > nul
cls
echo more coming soon!
pause > nul
exit
